# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.ini]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
